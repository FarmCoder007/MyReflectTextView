<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:reflect="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <com.lazy.mirrorimagetextview.ReflectTextView
        android:lineSpacingMultiplier="1.3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        reflect:spacingValue="5dp"
        reflect:reflectAlpha="120"
        reflect:reflectHeightMultiple="0.8"
        android:text="Reflect TextView 带倒影文本"
        android:textColor="#FF0000"
        android:textSize="20sp" />
    <com.lazy.mirrorimagetextview.ReflectTextView
        android:id="@+id/tv_reflect"
        android:lineSpacingMultiplier="1.3"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        reflect:spacingValue="5dp"
        reflect:reflectAlpha="120"
        reflect:reflectHeightMultiple="0.8"
        android:gravity="center_horizontal"
        android:text="推荐"
        android:textColor="#FF0000"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/picture_qian"
        android:layout_width="200dp"
        android:layout_height="200dp"
        />
</LinearLayout>